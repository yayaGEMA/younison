{# Utilisation du squelette de page base.html.twig #}
{% extends 'base.html.twig' %}

{# Titre de la page #}
{% block title %}{{ article.title }}{% endblock %}

{# Contenu de la page #}
{% block body %}

    <div class="container-fluid">

        {# Titre de l'article #}
        <div class="row">
            <div class="banner col-12 d-flex justify-content-center align-items-center">
                <h1>{{ article.title }}</h1>
            </div>
        </div>

        {# Affichage de l'article #}

        <div class="row">
            <div class="col-12 p-3">
                <div>
                    {# Affichage de la date et du pseudonym #}
                    <footer>Publié le <strong class="text-dark">{{ article.publicationDate|date('d/m/Y à H\\hi') }}</strong> par <strong class="text-dark">{{ article.author.pseudonym }}</strong></footer>
                </div>
            </div>
        </div>